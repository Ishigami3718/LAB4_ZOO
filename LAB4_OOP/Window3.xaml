<Window x:Class="LAB4_OOP.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB4_OOP"
        mc:Ignorable="d"
        Title="Window3" Height="300" Width="300" ResizeMode="NoResize" Closing="Close">
    <Canvas>
        <TextBox x:Name="FirstName" Margin="129,67,90,92" MinWidth="80" MinHeight="25" PreviewLostKeyboardFocus="ValidateTextBlock"/>
        <TextBox x:Name="Country" Margin="129,108,90,50" MinWidth="80" MinHeight="25" PreviewLostKeyboardFocus="ValidateTextBlock"/>
        <TextBlock Text="Назва тварини" Margin="28,29,180,130" MinWidth="80" MinHeight="25"
           TextAlignment="Right" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Text="Ім'я" Margin="26,67,0,0" MinWidth="87" MinHeight="25"
           TextAlignment="Right" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBlock Text="Країна" Margin="13,113,0,0" MinWidth="100" MinHeight="25"
           TextAlignment="Right" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <DatePicker x:Name="Birth" Width="130" Height="26" Canvas.Left="129" Canvas.Top="144" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button Content="OK" Width="76" Height="31" Canvas.Left="214" Canvas.Top="243" HorizontalAlignment="Center" VerticalAlignment="Top" Click="AddAnimal"/>
        <TextBox x:Name="Name" MinWidth="80" MinHeight="25" Canvas.Left="129" Canvas.Top="29" HorizontalAlignment="Center" VerticalAlignment="Top" PreviewLostKeyboardFocus="ValidateTextBlock"/>
        <TextBlock Text="Дата народження" MinWidth="100" MinHeight="25"
            TextAlignment="Right" Canvas.Left="13" Canvas.Top="144" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock Text="Дата прибуття" MinWidth="100" MinHeight="25"
            TextAlignment="Right" Canvas.Left="13" Canvas.Top="183" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock Text="Ціна" MinWidth="100" MinHeight="25"
            TextAlignment="Right" Canvas.Left="13" Canvas.Top="213" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <DatePicker x:Name="RecDate" Width="130" Height="26" Canvas.Left="129" Canvas.Top="182" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="Price" MinWidth="80" MinHeight="25" Canvas.Left="129" Canvas.Top="213" HorizontalAlignment="Center" VerticalAlignment="Top" PreviewLostKeyboardFocus="ValidatePrice"/>
    </Canvas>
</Window>
