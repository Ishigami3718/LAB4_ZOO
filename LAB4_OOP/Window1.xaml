<Window x:Class="LAB4_OOP.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB4_OOP"
        mc:Ignorable="d"
        Title="Додання кімнати" Height="200" Width="300" ResizeMode="NoResize" Closing="Close">
    <Canvas>
        <ComboBox x:Name="RoomTypeComboBox" Margin="129,29,90,130" MinWidth="80" MinHeight="25" ItemsSource="{Binding RoomTypes}"
                  SelectedItem="{Binding SelectedRoomType}"/>
        <TextBox x:Name="Size" Margin="129,67,90,92" MinWidth="80" MinHeight="25" PreviewLostKeyboardFocus="Validate"/>
        <TextBox x:Name="Price" Margin="129,108,90,50" MinWidth="80" MinHeight="25" PreviewLostKeyboardFocus="Validate"/>
        <TextBlock Text="Тип кімнати" Margin="28,29,180,130" MinWidth="80" MinHeight="25"
                   TextAlignment="Right" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Text="Розмір м²" Margin="26,67,0,0" MinWidth="87" MinHeight="25"
                   TextAlignment="Right" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBlock Text="Ціна прибирання" Margin="13,113,0,0" MinWidth="100" MinHeight="25"
                   TextAlignment="Right" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button Content="OK" Width="76" Height="31" Canvas.Left="214" Canvas.Top="143" HorizontalAlignment="Left" VerticalAlignment="Top" Click="AddRoom"/>

    </Canvas>
</Window>
