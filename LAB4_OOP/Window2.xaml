        <Button Content="Погодувати" Click="Feed" FontSize="12" Height="32" Width="76" Canvas.Left="186" Canvas.Top="137" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="RedactB" Content="Редагувати" Click="Redact" IsEnabled="False" FontSize="12" Height="32" Width="76" Canvas.Left="315" Canvas.Top="137" HorizontalAlignment="Left" VerticalAlignment="Center"/>

    </Canvas>
</Window>
